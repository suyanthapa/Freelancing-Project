<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Account Settings</title>
  <link rel="stylesheet" href="css/freelancerLogin/accountSetting.css">
</head>
<body>

  <div class="container">
    <!-- Sidebar -->
    <div class="sidebar">
      <div class="profile-pic">
        <img src="<%= user.profileImage %>" alt="Profile Picture">
      </div>
      <ul>
        <li><a href="accountSetting" class="active">Account Details</a></li>
        <li><a href="changePassword">Change Password</a></li>
        <li><a href="addJob">Post a Job</a></li>
        <li><a href="logout">Logout</a></li>
      </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
      
      <!-- Tab Navigation -->
      <div class="tab-container">
        <button class="tab-btn active" onclick="showSection('basic')">Basic Info</button>
        <button class="tab-btn" onclick="showSection('professional')">Professional Info</button>
      </div>

      <!-- Basic Info Section -->
      <div class="info-section" id="basic-info">
        <h1>Basic Info</h1>
        <div class="info-list">
          <div><label>First Name:</label><br> <span><%= user.first_name %></span></div>
          <div><label>Last Name:</label><br> <span><%= user.last_name %></span></div>
          <div><label>Email Address:</label><br> <span><%= user.email %></span></div>
          <div><label>Gender:</label><br> <span>Male</span></div>
          <div><label>Profile:</label><br> <span><%= user.profile %></span></div>
        </div>
      </div>

      <!-- Professional Info Section -->
      <div class="info-section hidden" id="professional-info">
        <h1>Professional Info</h1>
        <div class="info-list">
          <label for="skills">Skills:</label>
          <span><input type="text" id="skills" value="Blockchain, React, Node.js" disabled data-original-value="Blockchain, React, Node.js"></span>
      
          <label for="education">Education:</label>
          <span><input type="text" id="education" value="Bachelor’s in Computer Science" disabled data-original-value="Bachelor’s in Computer Science"></span>
      
          <label for="certifications">Certifications & Training:</label>
          <span><input type="text" id="certifications" value="Certified Blockchain Developer" disabled data-original-value="Certified Blockchain Developer"></span>
      
          <label for="portfolio">Portfolio:</label>
          <span><input type="text" id="portfolio" value="My Portfolio" disabled data-original-value="My Portfolio"></span>
      
          <label for="website">Website:</label>
          <span><input type="text" id="website" value="www.example.com" disabled data-original-value="www.example.com"></span>
      
          <label for="linkedin">LinkedIn/Profile Links:</label>
          <span><input type="text" id="linkedin" value="linkedin.com/in/username" disabled data-original-value="linkedin.com/in/username"></span>
        </div>
      
        <!-- Edit, Save, and Cancel Buttons -->
        <button id="editBtn">Edit</button>
        <button id="saveBtn" class="hidden">Save</button>
        <button id="cancelBtn" class="hidden">Cancel</button>
      </div>

    </div>
  </div>
  
  <script src="js/tabs.js"></script>
  <script src="js/editProfessionalInfo.js"></script>

</body>
</html>
